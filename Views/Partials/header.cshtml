@inherits UmbracoViewPage
@inject IUmbracoContextAccessor UmbracoContextAccessor

@{
    var preferences = Model.GetPreferences();
    if (preferences is null) return;

    var currentCulture = Thread.CurrentThread.CurrentCulture;
    var language = currentCulture.TwoLetterISOLanguageName;
    var path = language == "fr" ? "/en" : "/";
    var langueLabel = language == "fr" ? "English" : "Français";
}

<qc-header titre="@preferences?.NomDuSite"
    btnlabel="Ouvrir la recherche"
    contacturl="@preferences?.PageContact?.Url"
    contactlabel="@preferences?.PageContact?.Name"
    langueurl="@path"
    langueLabel="@langueLabel">
 </qc-header>

<qc-navigation>
    <ul>
       @Html.GetBlockListHtml(preferences, "Navigation")
    </ul>
</qc-navigation>

